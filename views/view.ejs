        height: 40px;
        width:620px;
        margin-bottom: 50px;

        border : 8px solid hsla(160, 52%, 71%, 1);
        border-radius: 50px;
        padding-left: 20px;
        padding-right: 20px;
        background-color: #37574C;
        font-family: 'Dosis', sans-serif;
        color: hsla(160, 52%, 71%, 1);

    }

    ::placeholder {
        font-family: 'Dosis', sans-serif;
        color: hsla(160, 52%, 71%, 1);


    }
    textarea{
        width:610px;
        height:500px;

        border : 8px solid hsla(160, 52%, 71%, 1);
        border-radius: 50px;
        padding: 25px;
        background-color: #37574C;
        font-family: 'Dosis', sans-serif;
        color: hsla(160, 52%, 71%, 1);
        ::placeholder {
            margin: 50px;
        }
    }
    .btn{
        margin-top: 40px;
        border-radius: 50px;
        padding: 15px;
        width: 200px;
        border : 8px solid hsla(160, 52%, 71%, 1);
        font-size: 18px;
        font-family: 'Dosis', sans-serif;
        color: hsla(160, 52%, 71%, 1);
        background-color: #233538;
      margin-right: 20px;
    }

    .xx {
        color: #D4EDE4;
        text-decoration: none;

        font-family: -apple-system, -apple-system,
        BlinkMacSystemFont, 'Segoe UI', Roboto,
