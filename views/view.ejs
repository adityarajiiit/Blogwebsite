    <div class="flex-box">
        <div class="flexbox">


            <div class="button" id="about" ><a href="/">About</a></div>


            <div class="button" id="create" action="/create"><a href="/create">Create</a></div>

            <div class="button" id="view" action="/view"><a href="/view">View</a></div>

        </div>

    </div>


